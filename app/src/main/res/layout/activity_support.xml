<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.student.StudentLogin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/back"
                android:padding="17dp"
                android:id="@+id/backbtn">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:text="Support"
                android:gravity="center"
                android:textSize="20dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Step1"
            android:orientation="vertical"
            android:padding="20dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittextback"
                android:hint="Message Title"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:inputType="text"
                android:id="@+id/titleInput"/>
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittextback"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Message"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:gravity="top"
                android:paddingTop="10dp"
                android:id="@+id/message"
                android:background="@drawable/edittextback"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnprimary"
                android:textColor="#FFF"
                android:text="Send"
                android:id="@+id/send"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/Step2"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:text="Step 2 : Setup your Profile"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittextback"
                android:hint="Student Id"
                android:paddingLeft="15dp"
                android:inputType="number"
                android:id="@+id/idInput"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextback"
                android:hint="Phone number"
                android:paddingLeft="15dp"
                android:inputType="phone"
                android:id="@+id/phoneInput"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edittextback"
                android:hint="Address"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:id="@+id/addressInput"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnprimary"
                android:textColor="#FFF"
                android:text="Signup"
                android:id="@+id/studentSignup"/>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>